<!DOCTYPE html>
<html>

  <head>

    <% if @title.nil? %>
      <title>tuutorials.</title>
    <% else %>
      <title><%= @title %> - tuutorials.</title>
    <% end %>

    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "application", :media => "all" %>

    <%= javascript_include_tag "application" %>
    <%= analytics_init if Rails.env.production? %>
    
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div id="header">
      
      <h1 id="tuutorials">
        <a href="/">tuutorials<span id="fullstop">.</span></a>
      </h1>

      <%= link_to "technologies", technologies_url, :class => "technologies-button" %>

      <div id="login" >
      <% if user_signed_in? %>
        <%= link_to current_user.username, current_user %>
        -
        <%= link_to "Log out", :destroy_user_session, :method => :delete %>
      <% else %>
        <%= link_to "Log in", :user_session, :method => :post %>
        -
        <%= link_to "Sign up", :new_user_registration %>
      <% end %>
      </div>

      <div class="clear"></div>
    
    </div>

    <% if current_page?(technologies_url) %>
      <%= render "home/head" %>
    <% end %>

    <div id="content-wrapper">

      <div id="content">

        <%= yield %>

      </div>

    </div>
  
    <div id="footer">
      
      &copy Joe Forshaw <%= Time.new.year %> - <a href="https://twitter.com/JoeDForshaw">@JoeDForshaw</a> - <a href="http://joeforshaw.co.uk">joeforshaw.co.uk</a>
    
    </div>
    
  
  </body>

</html> 