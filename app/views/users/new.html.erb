<h2 id="add">Register</h2>

<%= form_tag({:controller => :tutorials, :action => "create"}, :method => "post", :class => "form-horizontal") do %>
  <div class="control-group">
    <label class="control-label" for="name">Username</label>
    <div class="controls">
      <%= text_field_tag "name", "", :class => "input-xxlarge", :placeholder => "Name" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="name">Email</label>
    <div class="controls">
      <%= text_field_tag "email", "", :class => "input-xxlarge", :placeholder => "Name" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="password">Password</label>
    <div class="controls">
      <%= text_field_tag "password", "", :class => "input-xxlarge", :placeholder => "Link" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="confirm-password">Confirm Password</label>
    <div class="controls">
      <%= text_field_tag "confirm-password", "", :class => "input-xxlarge", :placeholder => "Name" %>
    </div>
  </div>

  <%= hidden_field_tag "technology", params[:technology] %>

  <div class="control-group">
    <div class="form-actions input">
      <%= button_to "Submit Tutorial", {:controller => :tutorials, :action => :create}, :class => "btn btn-primary" %>
      <%= button_to "Cancel", {:controller => :technologies, :action => :show, :id => params[:technology] }, :class => "btn", :method => :get %>
    </div>
  </div>
<% end %>